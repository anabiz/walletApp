{
  "name": "rule-validtion",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "yarn tsc",
    "test": "jest",
    "clean": "npx rimraf ./dist/",
    "fix": "eslint --fix '**/*.ts'",
    "lint": "eslint '**/*.ts'",
    "start": "node bin/www",
    "dev": "tsc --watch & nodemon --ignore bin/www"
  },
  "dependencies": {
    "@types/babel__core": "7.1.10",
    "@types/jest": "26.0.20",
    "@types/supertest": "2.0.10",
    "@types/typescript": "2.0.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "8.2.0",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jest": "26.6.3",
    "joi": "17.3.0",
    "morgan": "~1.9.1",
    "supertest": "6.1.3",
    "ts-node": "9.0.0"
  },
  "jest": {
    "testMatch": [
        "**/?(*.)+(spec|test).[j]s?(x)"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
},
  "devDependencies": {
    "@types/cookie-parser": "1.4.2",
    "@types/dotenv": "8.2.0",
    "@types/express": "4.17.8",
    "@types/http-errors": "1.8.0",
    "@types/morgan": "1.9.1",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "4.2.0",
    "@typescript-eslint/parser": "4.2.0",
    "eslint": "7.9.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.3.0",
    "nodemon": "2.0.4",
    "prettier": "2.1.2",
    "pretty-quick": "3.0.2",
    "typescript": "^4.0.3"
  },
  
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "echo \"---Running ESLint---\" && yarn fix"
    }
  }
}
